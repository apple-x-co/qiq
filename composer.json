{
    "name": "qiq/qiq",
    "type": "library",
    "description": "Provides TemplateView and TwoStepView implementations using PHP itself as the templating language, and an optional lightweight template markup.",
    "keywords": [
        "escape",
        "escaper",
        "escaping",
        "template",
        "template view",
        "view"
    ],
    "homepage": "https://github.com/qiqphp/qiq",
    "license": "MIT",
    "authors": [
        {
            "name": "Qiq Contributors",
            "homepage": "https://github.com/qiqphp/qiq/contributors"
        }
    ],
    "require": {
        "php": "^8.0",
        "laminas/laminas-escaper": "^2.0",
        "psr/container": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Qiq\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "pds/skeleton": "^1.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Qiq\\": "tests/"
        }
    },
    "scripts": {
        "analyze": "./vendor/bin/phpstan analyze -c phpstan.neon",
        "check": "composer cs-fix && composer test && composer analyze",
        "cs-fix": "./vendor/bin/php-cs-fixer fix --config=php-cs-fixer.php",
        "test": "./vendor/bin/phpunit"
    }
}
